Shader "2d/label_distancefield_normal" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uTextColor ("Text Color", Color) = (1.0, 1.0, 1.0, 1.0)
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend One OneMinusSrcAlpha
            Cull Off
            ZTest Always
            ZWrite Off

            CGPROGRAM

            uniform sampler2D _uMainTex;
            uniform float4 _uTextColor;

            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = i.tex;
                o.color = i.color;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                float dist = tex2D(_uMainTex, i.tex).a;
                float width = 0.04;
                float alpha = smoothstep(0.5 - width, 0.5 + width, dist) * _uTextColor.a;
                return i.color * float4(_uTextColor.rgb, alpha);
            }

            ENDCG
        }
    }
}