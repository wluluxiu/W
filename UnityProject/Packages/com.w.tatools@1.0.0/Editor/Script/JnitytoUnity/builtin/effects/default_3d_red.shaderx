Shader "3d/default_red" {
    Properties {
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend Off
            Cull Back
            ZTest Less
            ZWrite On

            CGPROGRAM
			
            struct a2v {
                float4 pos : POSITION;
            };

            struct v2f {
                float4 pos : SV_POSITION;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                return float4(0.85, 0.0, 0.0, 1.0);
            }

            ENDCG
        }
    }
}