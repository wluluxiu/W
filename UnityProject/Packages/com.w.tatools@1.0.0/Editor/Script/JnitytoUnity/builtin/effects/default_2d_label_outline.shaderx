Shader "2d/label_outline" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uTextColor ("Text Color", Color) = (1.0, 1.0, 1.0, 1.0)
        _uEffectColor ("Effect Color", Color) = (0.0, 0.0, 0.0, 1.0)
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend One OneMinusSrcAlpha
            Cull Off
            ZTest Always
            ZWrite Off

            CGPROGRAM

            uniform sampler2D _uMainTex;
            uniform float4 _uTextColor;
            uniform float4 _uEffectColor;

            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = i.tex;
                o.color = i.color;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                float4 sample = tex2D(_uMainTex, i.tex);
                float fontAlpha = sample.a;
                float outlineAlpha = sample.r;
                if (outlineAlpha <= 0.0) {
                    discard;
                }
                float4 color = _uTextColor * fontAlpha + _uEffectColor * (1.0 - fontAlpha);
                return i.color * float4( color.rgb, max(fontAlpha, outlineAlpha) * color.a);
            }

            ENDCG
        }
    }
}