Shader "3d/blit_linear" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend SrcAlpha OneMinusSrcAlpha
            Cull Off
            ZTest Always
			ZWrite Off

            CGPROGRAM
			#include "Colors.cginc"

            uniform sampler2D _uMainTex;

            struct a2v {
                float4 pos : POSITION;
                float4 color : COLOR0;
                float2 tex : TEXCOORD0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float4 color : COLOR0;
                float2 tex : TEXCOORD0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.color = i.color;
                o.tex = i.tex;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                float4 color = tex2D(_uMainTex, i.tex) * i.color;
                return SRGBToLinear(color);
            }

            ENDCG
        }
    }
}