Shader "3d/default_opaque_two_sides" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uColor ("Tint Color", Color) = (1.0, 1.0, 1.0, 1.0)
        _uMainTex_ST("_uMainTex_ST", Vector)=(1.0, 1.0, 0.0, 0.0)
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend Off
            Cull Off
            ZTest Less
            ZWrite On            

            CGPROGRAM

            uniform sampler2D _uMainTex;
            uniform float4 _uColor;
            uniform float4 _uMainTex_ST;

            #include "CG.cginc"

            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = TRANSFORM_TEX(float2(i.tex.x, 1.0 - i.tex.y),_uMainTex);
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                return _uColor * tex2D(_uMainTex, i.tex);
            }

            ENDCG
        }
    }
}