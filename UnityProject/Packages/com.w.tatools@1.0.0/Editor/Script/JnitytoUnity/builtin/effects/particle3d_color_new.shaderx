Shader "particle3d/color" {
    Properties {
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend SrcAlpha OneMinusSrcAlpha
            Cull Off
            ZTest Less
            ZWrite Off

            CGPROGRAM

            struct a2v {
                float4 pos : POSITION;
                float4 color : COLOR;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float4 color : TEXCOORD0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.color = i.color;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                return i.color;
            }

            ENDCG
        }
    }
}