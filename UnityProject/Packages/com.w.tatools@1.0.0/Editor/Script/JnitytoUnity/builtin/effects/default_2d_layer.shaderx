Shader "2d/layer" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend One OneMinusSrcAlpha
            Cull Off
            ZTest Always
            ZWrite Off

            CGPROGRAM

            uniform sampler2D _uMainTex;

            struct a2v {
                float4 pos : POSITION;
                float4 color : COLOR0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float4 color : COLOR0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMMatrix, i.pos);
                o.pos = float4(o.pos.x / o.pos.w, o.pos.y / o.pos.w, o.pos.z / o.pos.w, 1.0);
                o.pos = mul(uVPMatrix, o.pos);
                o.color = i.color;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                return i.color;
            }

            ENDCG
        }
    }
}