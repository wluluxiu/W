Shader "3d/default_3d_transparent" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uMainTex_ST("_uMainTex_ST",Vector)=(1.0, 1.0, 0.0, 0.0)
    }

    SubShader {
        Tags { "Queue"="Transparent" }

        Pass {
            
            Blend SrcAlpha OneMinusSrcAlpha
            Cull Back
            ZTest Always
            ZWrite Off

            CGPROGRAM

            uniform sampler2D _uMainTex;
            uniform float4 _uMainTex_ST;
			
            #include "CG.cginc"

            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = TRANSFORM_TEX(float2(i.tex.x, 1.0 - i.tex.y),_uMainTex);
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                float4 c = tex2D(_uMainTex, i.tex);
                if (c.a < 0.001) {
                    discard;
                }
                return c;
            }

            ENDCG
        }
    }
}