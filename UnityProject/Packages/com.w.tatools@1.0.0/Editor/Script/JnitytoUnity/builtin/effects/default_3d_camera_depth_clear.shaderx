Shader "3d/camera_depth_clear" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uDepth ("Depth", Float) = 0.0
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend Off
            Cull Back
            ZTest Less
            ZWrite On

            CGPROGRAM

            uniform sampler2D _uMainTex;
            uniform float _uDepth;

            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
                float4 color : TEXCOORD1;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.pos.z = _uDepth;
                o.pos.w = 1.0;
                o.tex = i.tex;
                o.color = i.color;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                return float4(i.color.rgb, 1.0);
            }

            ENDCG
        }
    }
}