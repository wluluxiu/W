Shader "2d/default_2d_pos_tex_alpha_test" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uAlphaValue ("Alpha Value", Float ) = 1.0
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend One OneMinusSrcAlpha
            Cull Off
            ZTest Always
            ZWrite Off

            CGPROGRAM

            uniform sampler2D _uMainTex;
            uniform float _uAlphaValue;

            struct a2v {
                float4 pos : POSITION;
                float4 color : COLOR0;
                float2 tex : TEXCOORD0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float4 color : COLOR0;
                float2 tex : TEXCOORD0;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = i.tex;
                o.color = i.color;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                float4 texColor = tex2D(_uMainTex, i.tex);
                if ( texColor.a <= _uAlphaValue ) {
                    discard;
                }
                return i.color * texColor;
            }

            ENDCG
        }
    }
}