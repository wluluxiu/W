Shader "2d/label_distancefield_glow" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uTextColor ("Text Color", Color) = (1.0, 1.0, 1.0, 1.0)
        _uEffectColor ("Effect Color", Color) = (0.0, 0.0, 0.0, 1.0)
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend One OneMinusSrcAlpha
            Cull Off
            ZTest Always
            ZWrite Off

            CGPROGRAM

            uniform sampler2D _uMainTex;
            uniform float4 _uTextColor;
            uniform float4 _uEffectColor;

            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = i.tex;
                o.color = i.color;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                float4 sample = tex2D(_uMainTex, i.tex);
                float width = 0.04;
                float alpha = smoothstep(0.5-width, 0.5+width, sample.a);
                float mu = smoothstep(0.5, 1.0, sqrt(sample.a));
                float4 color = _uEffectColor*(1.0-alpha) + _uTextColor*alpha;
                return i.color * float4(color.rgb, max(alpha,mu)*color.a);
            }

            ENDCG
        }
    }
}