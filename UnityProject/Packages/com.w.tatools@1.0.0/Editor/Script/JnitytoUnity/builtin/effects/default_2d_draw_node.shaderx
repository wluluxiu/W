Shader "2d/draw_node" {
    Properties {
        
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend One OneMinusSrcAlpha
            Cull Off
            ZTest Always
            ZWrite Off

            CGPROGRAM
			
            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
                float4 color : TEXCOORD1;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = i.tex;
                o.color = float4(i.color.rgb * i.color.a, i.color.a);
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                return step(0.0, 1.0 - length(i.tex)) * i.color;
            }

            ENDCG
        }
    }
}