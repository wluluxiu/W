Shader "2d/label_outline_new" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
    }

    SubShader {
        Tags { "Queue"="Geometry" }

        Pass {
            
            Blend One OneMinusSrcAlpha
            Cull Off
            ZTest Always
            ZWrite Off

            CGPROGRAM

            uniform sampler2D _uMainTex;

            struct a2v {
                float4 pos : POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR0;
                float4 effectcolor : COLOR1;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float2 tex : TEXCOORD0;
                float4 color : COLOR0;
                float4 effectcolor : TEXCOORD1;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.tex = i.tex;
                o.color = i.color;
                o.effectcolor = i.effectcolor;
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                float4 sample = tex2D(_uMainTex, i.tex);
                float outlineAlpha = sample.a;
                float fontAlpha = sample.r;
                if(fontAlpha <= 0.0) {
                    discard;
                }
                float4 color = lerp(i.effectcolor, i.color, outlineAlpha);
                return float4( color.rgb, max(fontAlpha, outlineAlpha) * color.a);
            }

            ENDCG
        }
    }
}