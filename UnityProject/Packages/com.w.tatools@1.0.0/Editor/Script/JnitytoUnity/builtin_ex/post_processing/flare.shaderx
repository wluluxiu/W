Shader "postprocessing/flare" {
	Properties {
		_uMainTex ( "main texture", 2D ) = "" {}
	}
	SubShader {
		Tags {"RenderType"="Overlay"}
		ZWrite Off ZTest Always
		Cull Off
		Blend One One
		ColorMask RGB

		Pass {
			CGPROGRAM

			uniform sampler2D _uMainTex;

			struct appdata_t {
				float4 pos : POSITION;
				fixed4 color : COLOR;
				float2 texcoord : TEXCOORD0;
			};
			struct v2f {
				float4 pos : POSITION;
				fixed4 color : COLOR;
				float2 texcoord : TEXCOORD0;
			};
			v2f vert (appdata_t v) {
				v2f o;
				o.pos = mul(uPMatrix, v.pos);
				o.color = v.color;
				o.texcoord = v.texcoord;
				return o;
			}
			float4 frag(v2f i) : SV_TARGET {
				float4 col;
				float4 tex = tex2D(_uMainTex, i.texcoord);
				col.rgb = i.color.rgb * tex.rgb;
				col.a = tex.a;
				return col;
			}
			
			ENDCG
		}
	}
}