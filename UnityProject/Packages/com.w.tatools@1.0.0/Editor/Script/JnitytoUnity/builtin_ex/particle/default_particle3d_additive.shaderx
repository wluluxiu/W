Shader "default_particle3d_additive" {
    Properties {
        _uMainTex ("Default Texture", 2D) = "" {}
        _uColor ("Text Color", Color) = (1.0, 1.0, 1.0, 1.0)
        _uBrightness ("Brightness", Float) = 2.0
    }

    SubShader {
        Tags { "Queue"="Transparent" }

        Pass {
            
            Blend SrcAlpha One
            Cull Off
            ZTest True
            ZWrite Off
            ZTest Less

            CGPROGRAM

            uniform sampler2D _uMainTex;

            uniform float4 _uColor;
            uniform float _uBrightness;

            struct a2v {
                float4 pos : POSITION;
                float4 color : COLOR;
                float2 uv : TEXCOORD0;
            };

            struct v2f {
                float4 pos : SV_POSITION;
                float4 color : TEXCOORD0;
                float2 uv : TEXCOORD1;
            };

            v2f vert(a2v i) {
                v2f o;
                o.pos = mul(uMVPMatrix, i.pos);
                o.color = i.color;
                o.uv = float2(i.uv.x, i.uv.y);
                return o;
            }

            float4 frag(v2f i) : SV_TARGET {
                return _uBrightness * i.color * _uColor * tex2D(_uMainTex, i.uv);
            }

            ENDCG
        }
    }
}