Shader "default_font" {
	Properties {
		_uMainTex ( "main texture", 2D ) = "" {}
		_uColor ("display color", Color) = (1, 1, 1, 1)
	}
	SubShader {
		Tags {"Queue"="Geometry"}
		Blend SrcAlpha OneMinusSrcAlpha
		Cull Off
		ZTest False
		ZWrite Off
		Pass {
			CGPROGRAM

			uniform sampler2D _uMainTex;
			uniform float4 _uColor;
			//uniform float3 uEyePos;
			struct appdata_t {
				float4 pos : POSITION;
				float2 uv : TEXCOORD0;
				float4 color : COLOR;
			};
			struct v2f {
				float4 pos : SV_POSITION;
				float2 uv : TEXCOORD0;
				float4 color : COLOR;
			};
			v2f vert (appdata_t v) {
				v2f o;
				o.pos = mul( uMVPMatrix, v.pos );
				o.uv = v.uv;
				o.color = v.color;
				return o;
			}
			float4 frag(v2f i) : SV_TARGET {
			    float a = tex2D(_uMainTex, i.uv).a;
				float4 retColor = i.color;
				retColor.a *= a;
				return retColor;
			}
			
			ENDCG
		}
	}
}